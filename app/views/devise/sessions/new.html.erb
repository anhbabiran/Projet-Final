<div class="container page-content">
    <div class="row">

        <div class="span12">

            <div class="box-container">

                <div style="margin-left: auto; margin-right: auto; width: 16cm">
                    <h2 class="page-title" , style="text-align: center;">Sign in</h2>
                    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class:"login-form") do |f| %>

                    <div class="form-group">
                    <%= f.email_field :email, autofocus: true ,class:"form-username form-control" , placeholder:'Email' %>
                    </div>
                    <div class="form-group">
                    <%= f.password_field :password, autocomplete: "off" , class:"form-username form-control" , placeholder:'Password'%>
                    </div>
                    <% if devise_mapping.rememberable? -%>
                    <%= f.check_box :remember_me, class:'login__check styled' %>
                    <%= f.label :remember_me, class:'login__check-info' %>

                    <% end -%>
                    <%= f.submit "Log in", class:"btn btn-md btn--warning btn--wider" %>
                    <% end %>
                    <%= render "devise/shared/links" %>
                </div>
            </div>
        </div>
    </div>

</div>
