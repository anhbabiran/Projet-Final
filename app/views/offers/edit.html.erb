      <div class="form row">
        <h1><i class="fa fa-pencil"></i></h1>
          <font size ="4" face="Courier New" color="green">
            <p class="login__title"><h1>EDIT OFFER<br></h1>
              <%= form_for @offer do |f| %>
                <div class="field-wrap">
                    <%= f.label :name %>
                    <%= f.text_field :name, class:"form__name"%><br />
                    <%= f.label :prix %>
                    <%= f.text_field :prix, class:"form__name"%><br />
                    <%= f.label :time %>
                    <%= f.text_field :time, class:"form__name"%><br />
                    <%= f.label :detail %>
                    <%= f.text_field :detail, class:"form__name"%><br />
                    <%= f.file_field :image %><br />
                    <br />
                    <%= f.submit class:"btn btn-md btn--warning" %>

                    <div class="movie__btns">
                          <button class="btn btn-md btn--warning"><%= link_to "Cancel", offers_path %></button>
                    </div>

                </div>
              <% end %>
      </div>
